---
interface FeatureCardProps {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="feature-card bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
  <div class="icon-wrapper mb-4 bg-primary-50 rounded-full w-14 h-14 flex items-center justify-center">
    <span class="text-primary-600 text-2xl">
      <Fragment set:html={icon} />
    </span>
  </div>
  <h3 class="text-xl font-semibold mb-2 text-gray-800">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>
