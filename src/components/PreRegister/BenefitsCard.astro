---
import { useTranslations } from '../../i18n/utils';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4 lg:p-6">
  <h3 class="text-lg lg:text-xl font-semibold text-white mb-4">{t('preRegister.benefits.title')}</h3>
  
  <div class="grid grid-cols-1 gap-4">
    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <svg class="w-5 h-5 lg:w-6 lg:h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <h4 class="font-medium text-white text-sm lg:text-base">{t('preRegister.benefits.early')}</h4>
        <p class="text-xs lg:text-sm text-blue-100 mt-1">
          {lang === 'es' ? 'Accede al contenido antes que el público general' : 'Access content before the general public'}
        </p>
      </div>
    </div>

    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <svg class="w-5 h-5 lg:w-6 lg:h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <h4 class="font-medium text-white text-sm lg:text-base">{t('preRegister.benefits.feedback')}</h4>
        <p class="text-xs lg:text-sm text-blue-100 mt-1">
          {lang === 'es' ? 'Tu opinión ayudará a mejorar el curso' : 'Your feedback will help improve the course'}
        </p>
      </div>
    </div>

    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <svg class="w-5 h-5 lg:w-6 lg:h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.196-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <h4 class="font-medium text-white text-sm lg:text-base">{t('preRegister.benefits.recognition')}</h4>
        <p class="text-xs lg:text-sm text-blue-100 mt-1">
          {lang === 'es' ? 'Reconocimiento como colaborador del proyecto' : 'Recognition as a project contributor'}
        </p>
      </div>
    </div>

    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <svg class="w-5 h-5 lg:w-6 lg:h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      <div class="min-w-0 flex-1">
        <h4 class="font-medium text-white text-sm lg:text-base">{t('preRegister.benefits.community')}</h4>
        <p class="text-xs lg:text-sm text-blue-100 mt-1">
          {lang === 'es' ? 'Forma parte de nuestra comunidad exclusiva' : 'Be part of our exclusive community'}
        </p>
      </div>
    </div>
  </div>
</div>
