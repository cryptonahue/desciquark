---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Obtener URL alternativas para el selector de idioma
const currentPath = Astro.url.pathname;
const esPath = currentPath.startsWith('/en/') 
  ? currentPath.replace('/en/', '/') 
  : currentPath;
const enPath = currentPath.startsWith('/en/') 
  ? currentPath 
  : '/en' + currentPath;
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/90 border-b border-gray-200 shadow-sm">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <a href={lang === 'en' ? '/en/' : '/'} class="flex items-center gap-2">
      <img src="/images/logo.svg" alt="DeSci Quark" class="h-10" />
      <span class="text-xl font-bold text-primary-600">DeSci Quark</span>
    </a>
    
    <div class="flex items-center gap-4">
      <!-- Selector de idioma -->
      <div class="flex border border-gray-300 rounded-full overflow-hidden">
        <a href={esPath} class={`px-3 py-1 text-sm ${lang === 'es' ? 'bg-primary-500 text-white' : 'hover:bg-gray-100'}`}>ES</a>
        <a href={enPath} class={`px-3 py-1 text-sm ${lang === 'en' ? 'bg-primary-500 text-white' : 'hover:bg-gray-100'}`}>EN</a>
      </div>
      
      <!-- BotÃ³n de login -->
      <a href="#" class="btn btn-outline py-2 px-4">
        {t('login')}
      </a>
    </div>
  </div>
</header>
