---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import FeatureCard from './FeatureCard.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Iconos para las feature cards
const bookIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
</svg>`;

const labIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
</svg>`;

const certificateIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
</svg>`;
---

<section id="course-overview" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <span class="section-tag">{t('courseOverview.tag')}</span>
      <h2 class="section-title">{t('courseOverview.title')}</h2>
      <p class="section-subtitle">{t('courseOverview.subtitle')}</p>
    </div>
    
    <div class="flex flex-col lg:flex-row gap-8 items-start">
      <div class="w-full lg:w-1/2">
        <div class="bento-card p-6 md:p-8 shadow-md border border-gray-100 rounded-2xl">
          <h3 class="text-xl font-semibold mb-4 text-gray-800">{t('courseOverview.descriptionTitle')}</h3>
          <p class="text-gray-600 mb-6">{t('courseOverview.description')}</p>
          
          <div class="grid grid-cols-1 gap-6">
            <FeatureCard 
              icon={bookIcon}
              title={t('courseOverview.featureOne.title')}
              description={t('courseOverview.featureOne.description')}
            />
            
            <FeatureCard 
              icon={labIcon}
              title={t('courseOverview.featureTwo.title')}
              description={t('courseOverview.featureTwo.description')}
            />
            
            <FeatureCard 
              icon={certificateIcon}
              title={t('courseOverview.featureThree.title')}
              description={t('courseOverview.featureThree.description')}
            />
          </div>
        </div>
      </div>
      
      <div class="w-full lg:w-1/2">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="bento-card bg-blue-50 p-6 flex flex-col items-center text-center shadow-sm rounded-xl hover:shadow-md transition-shadow duration-300">
            <div class="bg-white p-3 rounded-full mb-4 shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h4 class="font-semibold text-gray-800 mb-1">8 MÃ³dulos</h4>
            <p class="text-gray-600 text-sm">{t('courseOverview.statOne.label')}</p>
          </div>
          
          <div class="bento-card bg-blue-50 p-6 flex flex-col items-center text-center shadow-sm rounded-xl hover:shadow-md transition-shadow duration-300">
            <div class="bg-white p-3 rounded-full mb-4 shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h4 class="font-semibold text-gray-800 mb-1">A definir</h4>
            <p class="text-gray-600 text-sm">Horas de aprendizaje</p>
          </div>
          
          <div class="bento-card bg-blue-50 p-6 flex flex-col items-center text-center shadow-sm rounded-xl hover:shadow-md transition-shadow duration-300">
            <div class="bg-white p-3 rounded-full mb-4 shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h4 class="font-semibold text-gray-800 mb-1">{t('courseOverview.statThree.value')}</h4>
            <p class="text-gray-600 text-sm">{t('courseOverview.statThree.label')}</p>
          </div>
          
          <div class="bento-card bg-blue-50 p-6 flex flex-col items-center text-center shadow-sm rounded-xl hover:shadow-md transition-shadow duration-300">
            <div class="bg-white p-3 rounded-full mb-4 shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h4 class="font-semibold text-gray-800 mb-1">{t('courseOverview.statFour.value')}</h4>
            <p class="text-gray-600 text-sm">{t('courseOverview.statFour.label')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
