---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="course-details" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <span class="section-tag">{t('courseDetails.tag')}</span>
      <h2 class="section-title">{t('courseDetails.title')}</h2>
      <p class="section-subtitle">{t('courseDetails.subtitle')}</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Detalles del curso -->
      <div class="bento-card bg-white shadow-md border border-gray-100">
        <h3 class="text-xl font-semibold mb-6 text-gray-800">{t('courseDetails.detailsTitle')}</h3>
        
        <div class="space-y-4">
          <div class="flex items-start gap-4">
            <div class="bg-primary-100 p-3 rounded-full text-primary-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-800">{t('courseDetails.price.title')}</h4>
              <p class="text-gray-600">{t('courseDetails.price.value')}</p>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="bg-primary-100 p-3 rounded-full text-primary-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-800">{t('courseDetails.duration.title')}</h4>
              <p class="text-gray-600">{t('courseDetails.duration.value')}</p>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="bg-primary-100 p-3 rounded-full text-primary-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-800">{t('courseDetails.audience.title')}</h4>
              <p class="text-gray-600">{t('courseDetails.audience.value')}</p>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="bg-primary-100 p-3 rounded-full text-primary-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path d="M12 14l9-5-9-5-9 5 9 5z" />
                <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-800">{t('courseDetails.certificate.title')}</h4>
              <p class="text-gray-600">{t('courseDetails.certificate.value')}</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Objetivos de aprendizaje -->
      <div class="bento-card bg-white shadow-md border border-gray-100">
        <h3 class="text-xl font-semibold mb-6 text-gray-800">{t('courseDetails.learningObjectivesTitle')}</h3>
        
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <div class="bg-primary-500 text-white p-1 rounded-full mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="text-gray-600">{t('courseDetails.learningObjectives.obj1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <div class="bg-primary-500 text-white p-1 rounded-full mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="text-gray-600">{t('courseDetails.learningObjectives.obj2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <div class="bg-primary-500 text-white p-1 rounded-full mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="text-gray-600">{t('courseDetails.learningObjectives.obj3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <div class="bg-primary-500 text-white p-1 rounded-full mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="text-gray-600">{t('courseDetails.learningObjectives.obj4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <div class="bg-primary-500 text-white p-1 rounded-full mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span class="text-gray-600">{t('courseDetails.learningObjectives.obj5')}</span>
          </li>
        </ul>
        
        <div class="mt-8">
          <a href={lang === 'es' ? 'https://course.desciquark.com/es/registro/?ld_register_id=3586' : 'https://course.desciquark.com/register/?ld_register_id=2160'} class="btn btn-primary w-full shadow-md">
            {t('courseDetails.registerCta')}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
