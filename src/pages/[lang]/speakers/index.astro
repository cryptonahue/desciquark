---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SpeakerCard from '../../../components/SpeakerCard.astro';
import { getLangFromUrl } from '../../../i18n/utils';
import { ui } from '../../../i18n/ui';

export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const speakers = await getCollection('speakers');
const sortedSpeakers = speakers.sort((a, b) => a.data.id - b.data.id);

const t = ui[lang as keyof typeof ui];

const title = lang === 'es' 
  ? 'Speakers - DeSci Quark' 
  : 'Speakers - DeSci Quark';

const description = lang === 'es'
  ? 'Conoce a todos los speakers expertos que participarán en el curso de blockchain para científicos usando Cardano.'
  : 'Meet all the expert speakers who will participate in the blockchain course for scientists using Cardano.';
---

<BaseLayout title={title} description={description} lang={lang}>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="pt-32 pb-20 bg-gradient-to-br from-primary-500 to-blue-600">
      <div class="container mx-auto px-4 text-center">
        <span class="bg-white/10 text-white text-sm font-medium py-1 px-3 rounded-full mb-2 inline-block">
          {t.speakers.tag}
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          {t.speakers.title}
        </h1>
        <p class="text-lg text-blue-100 max-w-3xl mx-auto">
          {t.speakers.subtitle}
        </p>
        
        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12 max-w-3xl mx-auto">
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-2">{sortedSpeakers.length}</div>
            <div class="text-blue-200 text-sm">
              {lang === 'es' ? 'Speakers Expertos' : 'Expert Speakers'}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-2">6</div>
            <div class="text-blue-200 text-sm">
              {lang === 'es' ? 'Países' : 'Countries'}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-white mb-2">9+</div>
            <div class="text-blue-200 text-sm">
              {lang === 'es' ? 'Áreas de Expertise' : 'Areas of Expertise'}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Speakers Grid -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="bento-grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
          {sortedSpeakers.map((speaker) => (
            <SpeakerCard speaker={speaker} lang={lang} />
          ))}
        </div>
      </div>
    </section>

    <!-- Categories -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            {lang === 'es' ? 'Por Categorías' : 'By Categories'}
          </h2>
          <p class="text-xl text-gray-600">
            {lang === 'es' 
              ? 'Explora speakers por área de expertise' 
              : 'Explore speakers by area of expertise'}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Ciencia & Investigación -->
          <div class="bg-gradient-to-br from-green-50 to-emerald-100 p-8 rounded-xl">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 0 0-3.7-3.7 47.692 47.692 0 0 0-7.324 0 4.006 4.006 0 0 0-3.7 3.7c-.092 1.209-.138 2.43-.138 3.662s.046 2.453.138 3.662a4.006 4.006 0 0 0 3.7 3.7c2.416.216 4.908.216 7.324 0a4.006 4.006 0 0 0 3.7-3.7c.092-1.209.138-2.43.138-3.662Z"/>
                  <path d="M9 8.25a.75.75 0 0 1 .75-.75H12a.75.75 0 0 1 0 1.5H9.75A.75.75 0 0 1 9 8.25ZM9 12a.75.75 0 0 1 .75-.75h6a.75.75 0 0 1 0 1.5h-6A.75.75 0 0 1 9 12Zm0 3.75a.75.75 0 0 1 .75-.75h6a.75.75 0 0 1 0 1.5h-6a.75.75 0 0 1-.75-.75Z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">
                {lang === 'es' ? 'Ciencia & Investigación' : 'Science & Research'}
              </h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              {lang === 'es' 
                ? 'Expertos en investigación científica y DeSci' 
                : 'Experts in scientific research and DeSci'}
            </p>
            <div class="text-2xl font-bold text-green-600">3 Speakers</div>
          </div>

          <!-- Gobernanza & Política -->
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 p-8 rounded-xl">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zM7.5 6L16 12l-8.5 6V6z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">
                {lang === 'es' ? 'Gobernanza & Política' : 'Governance & Politics'}
              </h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              {lang === 'es' 
                ? 'Líderes en gobernanza descentralizada' 
                : 'Leaders in decentralized governance'}
            </p>
            <div class="text-2xl font-bold text-blue-600">2 Speakers</div>
          </div>

          <!-- Tecnología & Desarrollo -->
          <div class="bg-gradient-to-br from-purple-50 to-violet-100 p-8 rounded-xl">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-5 14H4v-4h11v4zm0-5H4V9h11v4zm5 5h-4V9h4v9z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">
                {lang === 'es' ? 'Tecnología & Desarrollo' : 'Technology & Development'}
              </h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              {lang === 'es' 
                ? 'Desarrolladores y arquitectos blockchain' 
                : 'Blockchain developers and architects'}
            </p>
            <div class="text-2xl font-bold text-purple-600">3 Speakers</div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>