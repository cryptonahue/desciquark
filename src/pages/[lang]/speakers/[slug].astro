---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const speakersEs = await getCollection('speakers', (entry) => entry.id.startsWith('es/'));
  const speakersEn = await getCollection('speakers', (entry) => entry.id.startsWith('en/'));
  const paths: any[] = [];

  speakersEs.forEach((speaker) => {
    const slug = speaker.id.replace('es/', '').replace('.md', '');
    paths.push({
      params: { lang: 'es', slug: slug },
      props: { speaker, lang: 'es' }
    });
  });

  speakersEn.forEach((speaker) => {
    const slug = speaker.id.replace('en/', '').replace('.md', '');
    paths.push({
      params: { lang: 'en', slug: slug },
      props: { speaker, lang: 'en' }
    });
  });

  return paths;
}

const { speaker, lang } = Astro.props;
const { data, render } = speaker;
const { Content } = await render();

const title = `${data.name} - DeSci Quark`;
const description = `${data.name} - ${data.company}`;
